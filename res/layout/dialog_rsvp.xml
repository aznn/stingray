<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp" >

   <CheckBox
        android:id="@+id/check_friends"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Add friends to your Guest List?" />
    
    <EditText
        android:id="@+id/text_friends"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check_friends"
        android:layout_below="@+id/check_friends"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="gone"
        android:hint="One name per line" />

</RelativeLayout>